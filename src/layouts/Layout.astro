---
import '../styles/global.css'

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Musio - One Plugin, Every Instrument", 
  description = "2,300+ professional virtual instruments. One subscription. Endless possibilities."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Open Graph / Social Media Preview -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://musio-discover-oqhe.vercel.app/musio-logo.png" />
    <meta property="og:image:alt" content="Musio Logo" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://musio-discover-oqhe.vercel.app/musio-logo.png" />
    
    <!-- Preconnect to CDNs for faster loading -->
    <link rel="preconnect" href="https://assets.mus.io" crossorigin />
    <link rel="dns-prefetch" href="https://assets.mus.io" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-[#0a0a0a] text-white font-sans antialiased">
    <slot />
    
    <!-- Paddle Checkout -->
    <script src="https://cdn.paddle.com/paddle/v2/paddle.js"></script>
    <script>
      // Wait for Paddle to load
      function initPaddle() {
        if (typeof Paddle !== 'undefined') {
          Paddle.Initialize({
            token: 'live_bcd84670952c10adf233b703201'
          });
        } else {
          setTimeout(initPaddle, 100);
        }
      }
      initPaddle();
      
      window.openMusioPro = function() {
        if (typeof Paddle !== 'undefined') {
          Paddle.Checkout.open({
            items: [{ priceId: 'pri_01kg4x3crjfmd3ef949sqntd1t', quantity: 1 }]
          });
        } else {
          console.error('Paddle not loaded');
        }
      };
      
      window.openMusioProMonthly = function() {
        if (typeof Paddle !== 'undefined') {
          Paddle.Checkout.open({
            items: [{ priceId: 'pri_01kg4x0haygz26z8fvrk5821fd', quantity: 1 }]
          });
        } else {
          console.error('Paddle not loaded');
        }
      };
    </script>
  </body>
</html>
