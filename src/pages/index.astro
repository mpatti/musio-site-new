---

<Layout>
  <!-- Header -->
  <header class="absolute top-0 left-0 right-0 z-20 py-6 px-6">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <div></div>
      <nav class="flex items-center gap-6">
        <a href="/developers" class="text-sm font-medium px-4 py-2 rounded-full border border-[#333] hover:border-[#E94560] hover:text-[#E94560] transition-colors">Partner With Us</a>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Netflix-style Image Grid Background -->
    <div class="absolute inset-0 grid-background">
      <div class="image-grid">
        {instrumentImages.map((src, i) => (
          <div class="grid-item">
            <img 
              src={src} 
              alt="" 
              loading={i < 22 ? "eager" : "lazy"}
              decoding="async"
              width="100"
              height="100"
              class="w-full h-full object-cover" 
            />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/70 to-[#0a0a0a]/40"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a0a]/80 via-transparent to-transparent"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
      <!-- Logo -->
      <div class="mb-8">
        <img 
          src="https://musio-discover-oqhe.vercel.app/musio-logo.png" 
          alt="Musio" 
          class="h-12 md:h-16 mx-auto"
        />
      </div>
      
      <!-- Headline -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
        The Modern<br />
        <span class="text-[#E94560]">Instrument Platform</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
        One plugin. Every instrument.<br />
        World-class libraries from the developers you trust.
      </p>
      
      <!-- Developer Logos / Names -->
      <div class="mb-10">
        <div class="flex flex-wrap justify-center items-center gap-x-8 gap-y-3">
          {developers.map((name) => (
            <span class="text-gray-300 text-lg font-medium hover:text-white transition-colors duration-200">
              {name}
            </span>
          ))}
          <span class="text-gray-400 text-lg">+ more</span>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="https://portal.musio.com/signup" 
          class="bg-[#E94560] hover:bg-[#d63d56] text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-200 hover:scale-105"
        >
          Get Started Free
        </a>
        <a 
          href="#pricing" 
          class="text-gray-300 hover:text-white transition-colors duration-200"
        >
          View pricing
        </a>
      </div>
      
      <!-- Free callout -->
      <p class="text-gray-400 text-sm mt-4">35 instruments free. No credit card required.</p>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Product Showcase Section -->
  <section class="py-20 px-6 border-t border-[#1a1a1a]">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">See Musio in action</h2>
        <p class="text-gray-300 text-lg">One plugin. Thousands of instruments. Zero complexity.</p>
      </div>
      
      <!-- 2x2 Screenshot Grid -->
      <div class="grid md:grid-cols-2 gap-5">
        <div>
          <div class="aspect-[4/3] overflow-hidden rounded-lg shadow-xl border border-[#1a1a1a] cursor-pointer lightbox-trigger hover:border-[#333] transition-colors" data-src="/screenshot-catalog.png">
            <img 
              src="/screenshot-catalog.png" 
              alt="Musio catalog browser showing instrument library grid" 
              class="w-full h-full object-cover object-top"
              loading="lazy"
            />
          </div>
          <p class="text-gray-400 text-sm mt-3 text-center">Browse thousands of instruments.</p>
        </div>
        <div>
          <div class="aspect-[4/3] overflow-hidden rounded-lg shadow-xl border border-[#1a1a1a] cursor-pointer lightbox-trigger hover:border-[#333] transition-colors" data-src="/screenshot-search.png">
            <img 
              src="/screenshot-search.png" 
              alt="Musio search results for drums" 
              class="w-full h-full object-cover object-top"
              loading="lazy"
            />
          </div>
          <p class="text-gray-400 text-sm mt-3 text-center">Preview and find exactly what you need.</p>
        </div>
        <div>
          <div class="aspect-[4/3] overflow-hidden rounded-lg shadow-xl border border-[#1a1a1a] cursor-pointer lightbox-trigger hover:border-[#333] transition-colors" data-src="/screenshot-keyswitch.png">
            <img 
              src="/screenshot-keyswitch.png" 
              alt="Musio Vowels instrument with keyswitch articulations" 
              class="w-full h-full object-cover object-top"
              loading="lazy"
            />
          </div>
          <p class="text-gray-400 text-sm mt-3 text-center">Keyswitching and advanced articulations.</p>
        </div>
        <div>
          <div class="aspect-[4/3] overflow-hidden rounded-lg shadow-xl border border-[#1a1a1a] cursor-pointer lightbox-trigger hover:border-[#333] transition-colors" data-src="/screenshot-mixer.png">
            <img 
              src="/screenshot-mixer.png" 
              alt="Musio mixer with multiple microphone positions" 
              class="w-full h-full object-cover object-top"
              loading="lazy"
            />
          </div>
          <p class="text-gray-400 text-sm mt-3 text-center">Multiple mic positions. Dial in your sound.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 px-6 border-t border-[#1a1a1a]">
    <div class="max-w-5xl mx-auto">
