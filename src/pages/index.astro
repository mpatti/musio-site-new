---

<Layout>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Netflix-style Image Grid Background -->
    <div class="absolute inset-0 grid-background">
      <div class="image-grid">
        {instrumentImages.map((src, i) => (
          <div class="grid-item">
            <img 
              src={src} 
              alt="" 
              loading={i < 14 ? "eager" : "lazy"}
              decoding="async"
              width="100"
              height="100"
              class="w-full h-full object-cover" 
            />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/80 to-[#0a0a0a]/60"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a0a] via-transparent to-transparent"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
      <!-- Logo -->
      <div class="mb-8">
        <img 
          src="https://musio-discover-oqhe.vercel.app/musio-logo.png" 
          alt="Musio" 
          class="h-12 md:h-16 mx-auto"
        />
      </div>
      
      <!-- Headline -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
        The Next Generation<br />
        <span class="text-[#E94560]">Instrument Platform</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="text-xl md:text-2xl text-gray-400 mb-8 max-w-3xl mx-auto">
        One plugin. Every instrument. World-class libraries from the developers you trust.
      </p>
      
      <!-- Developer Logos / Names -->
      <div class="mb-10">
        <p class="text-sm text-gray-500 uppercase tracking-widest mb-4">Featuring libraries from</p>
        <div class="flex flex-wrap justify-center items-center gap-x-8 gap-y-3">
          {developers.map((name) => (
            <span class="text-gray-400 text-lg font-medium hover:text-white transition-colors duration-200">
              {name}
            </span>
          ))}
          <span class="text-gray-500 text-lg">+ more</span>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="https://portal.musio.com/account/download-musio" 
          class="bg-[#E94560] hover:bg-[#d63d56] text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-200 hover:scale-105"
        >
          Get Started Free
        </a>
        <a 
          href="#pricing" 
          class="text-gray-400 hover:text-white transition-colors duration-200"
        >
          View pricing
        </a>
      </div>
      
      <!-- Free callout -->
      <p class="text-gray-500 text-sm mt-4">35 instruments free. No credit card required.</p>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
