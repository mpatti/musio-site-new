  "https://assets.mus.io/54bd0cd6e5ef253d60f49a6546ba706bb6dea43b4985fd38d4288f781f28e33b.png",
];
---

<Layout title="Sign Up - Musio" description="Create your Musio account and start making music.">
  <div class="min-h-screen flex">
    <!-- Left Side - Instrument Grid -->
    <div class="hidden lg:block lg:w-1/2 relative overflow-hidden">
      <div class="absolute inset-0 grid-background">
        <div class="image-grid">
          {instrumentImages.map((src, i) => (
            <div class="grid-item">
              <img 
                src={src} 
                alt="" 
                loading={i < 8 ? "eager" : "lazy"}
                decoding="async"
                class="w-full h-full object-cover"
              />
            </div>
          ))}
        </div>
      </div>
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent to-[#0a0a0a]"></div>
      <div class="absolute inset-0 bg-[#0a0a0a]/30"></div>
      
      <!-- Branding on left side -->
      <div class="absolute bottom-12 left-12 z-10">
        <a href="/">
          <img src="/logo.png" alt="Musio" class="h-10" />
        </a>
      </div>
      
      <!-- Back link -->
      <a href="/" class="absolute top-8 left-8 z-10 text-gray-400 hover:text-white text-sm transition-colors flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Musio
      </a>
    </div>

    <!-- Right Side - Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 relative">
      <!-- Back link (mobile) -->
      <a href="/" class="absolute top-6 left-6 lg:hidden text-gray-400 hover:text-white text-sm transition-colors flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      </a>
      
      <div class="w-full max-w-md">
        <!-- Logo (mobile only) -->
        <div class="text-center mb-10 lg:hidden">
          <a href="/">
            <img 
              src="/logo.png" 
              alt="Musio" 
              class="h-12 mx-auto mb-6"
            />
          </a>
        </div>
        
        <!-- Heading -->
        <div class="mb-10">
          <h1 class="text-3xl font-bold mb-2">Create your account</h1>
          <p class="text-gray-400">Start making music with Musio</p>
        </div>

        <!-- Signup Form -->
        <form class="space-y-5">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Full name</label>
            <input 
              type="text" 
              id="name" 
              name="name"
              required
              class="w-full px-4 py-3 bg-[#141414] border border-[#2a2a2a] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#E94560] focus:ring-1 focus:ring-[#E94560] transition-colors"
              placeholder="Your name"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email address</label>
            <input 
              type="email" 
              id="email" 
              name="email"
              required
              class="w-full px-4 py-3 bg-[#141414] border border-[#2a2a2a] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#E94560] focus:ring-1 focus:ring-[#E94560] transition-colors"
              placeholder="you@example.com"
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
            <input 
              type="password" 
              id="password" 
              name="password"
              required
              minlength="8"
              class="w-full px-4 py-3 bg-[#141414] border border-[#2a2a2a] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#E94560] focus:ring-1 focus:ring-[#E94560] transition-colors"
              placeholder="At least 8 characters"
            />
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-[#E94560] hover:bg-[#d63d56] text-white font-semibold py-3 px-4 rounded-lg transition-all duration-200 hover:scale-[1.02] mt-6"
          >
            Create account
          </button>
        </form>

        <!-- Login Link -->
        <p class="text-center text-gray-400 mt-8">
          Already have an account? 
          <a href="/login" class="text-[#E94560] hover:underline font-medium">Sign in</a>
        </p>

        <!-- Terms -->
        <p class="text-center text-gray-500 text-xs mt-6">
          By creating an account, you agree to our 
          <a href="/terms" class="text-gray-400 hover:underline">Terms of Service</a> 
          and 
          <a href="/privacy" class="text-gray-400 hover:underline">Privacy Policy</a>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .grid-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  
  .image-grid {
    display: grid;
    grid-template-columns: repeat(4, 120px);
    grid-auto-rows: 120px;
    gap: 4px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(2);
  }
  
  .grid-item {
    overflow: hidden;
    filter: brightness(0.9);
    width: 100%;
    height: 100%;
    background: #1a1a1a;
  }
  
  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
