---

<Layout title="Sign In - Musio" description="Sign in to your Musio account.">
  <div class="min-h-screen flex">
    <!-- Left Side - Instrument Grid -->
    <div class="hidden lg:block lg:w-1/2 relative overflow-hidden">
      <div class="absolute inset-0 grid-background">
        <div class="image-grid">
          {instrumentImages.map((src, i) => (
            <div class="grid-item">
              <img 
                src={src} 
                alt="" 
                loading={i < 8 ? "eager" : "lazy"}
                decoding="async"
                class="w-full h-full object-cover"
              />
            </div>
          ))}
        </div>
      </div>
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent to-[#0a0a0a]"></div>
      <div class="absolute inset-0 bg-[#0a0a0a]/30"></div>
      
      <!-- Branding on left side -->
      <div class="absolute bottom-12 left-12 z-10">
        <img src="/logo.png" alt="Musio" class="h-10 mb-4" />
        <p class="text-white text-xl font-medium">One plugin. Every instrument.</p>
        <p class="text-gray-400">World-class libraries from the developers you trust.</p>
      </div>
    </div>

    <!-- Right Side - Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12">
      <div class="w-full max-w-md">
        <!-- Logo (mobile only) -->
        <div class="text-center mb-10 lg:hidden">
          <a href="/">
            <img 
              src="/logo.png" 
              alt="Musio" 
              class="h-12 mx-auto mb-6"
            />
          </a>
        </div>
        
        <!-- Heading -->
        <div class="mb-10">
          <h1 class="text-3xl font-bold mb-2">Welcome back</h1>
          <p class="text-gray-400">Sign in to your account</p>
        </div>

        <!-- Login Form -->
        <form class="space-y-5">
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email address</label>
            <input 
              type="email" 
              id="email" 
              name="email"
              required
              class="w-full px-4 py-3 bg-[#141414] border border-[#2a2a2a] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#E94560] focus:ring-1 focus:ring-[#E94560] transition-colors"
              placeholder="you@example.com"
            />
          </div>

          <!-- Password -->
          <div>
            <div class="flex justify-between items-center mb-2">
              <label for="password" class="block text-sm font-medium text-gray-300">Password</label>
              <a href="/forgot-password" class="text-sm text-[#E94560] hover:underline">Forgot password?</a>
            </div>
            <input 
              type="password" 
              id="password" 
              name="password"
              required
              class="w-full px-4 py-3 bg-[#141414] border border-[#2a2a2a] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#E94560] focus:ring-1 focus:ring-[#E94560] transition-colors"
              placeholder="Your password"
            />
          </div>

          <!-- Remember Me -->
          <div class="flex items-center">
            <input 
              type="checkbox" 
              id="remember" 
              name="remember"
              class="w-4 h-4 bg-[#141414] border-[#2a2a2a] rounded text-[#E94560] focus:ring-[#E94560] focus:ring-offset-0"
            />
            <label for="remember" class="ml-2 text-sm text-gray-400">Remember me</label>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-[#E94560] hover:bg-[#d63d56] text-white font-semibold py-3 px-4 rounded-lg transition-all duration-200 hover:scale-[1.02] mt-6"
          >
            Sign in
          </button>
        </form>

        <!-- Signup Link -->
        <p class="text-center text-gray-400 mt-8">
          Don't have an account? 
          <a href="/signup" class="text-[#E94560] hover:underline font-medium">Create one</a>
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .grid-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  
  .image-grid {
    display: grid;
    grid-template-columns: repeat(4, 120px);
    grid-auto-rows: 120px;
    gap: 4px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(2);
  }
  
  .grid-item {
    overflow: hidden;
    filter: brightness(0.9);
    width: 100%;
    height: 100%;
    background: #1a1a1a;
  }
  
  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
