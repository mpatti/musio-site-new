  <script is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize Paddle
      if (typeof Paddle !== 'undefined') {
        Paddle.Initialize({ 
          token: 'live_bcd84670952c10adf233b703201'
        });
      }

      // Cart state
      let cart = JSON.parse(localStorage.getItem('musioCart') || '[]');

      // DOM elements
      const searchInput = document.getElementById('search-input');
      const productCards = document.querySelectorAll('.product-card');
      const categoryBtns = document.querySelectorAll('.category-btn');
      const developerBtns = document.querySelectorAll('.developer-btn');
      const productCount = document.getElementById('product-count');
      const addToCartBtns = document.querySelectorAll('.add-to-cart');
      const cartButton = document.getElementById('cart-button');
      const cartDropdown = document.getElementById('cart-dropdown');
      const cartItemsContainer = document.getElementById('cart-items');
      const cartText = document.getElementById('cart-text');
      const cartTotal = document.getElementById('cart-total');
      const checkoutBtn = document.getElementById('checkout-btn');
      const clearCartBtn = document.getElementById('clear-cart-btn');
      const proComparison = document.getElementById('pro-comparison');
      
      let currentCategory = 'All';
      let currentDeveloper = 'All';
      let searchQuery = '';

      // Save cart to localStorage
      function saveCart() {
        localStorage.setItem('musioCart', JSON.stringify(cart));
      }

      // Update cart UI
      function updateCartUI() {
        const itemCount = cart.length;
        cartText.textContent = `Cart: ${itemCount} item${itemCount !== 1 ? 's' : ''}`;
        
        if (itemCount === 0) {
          cartItemsContainer.innerHTML = '<p class="text-gray-500 text-sm text-center py-4">Your cart is empty</p>';
          cartTotal.textContent = '$0.00';
          checkoutBtn.disabled = true;
          proComparison.classList.add('hidden');
        } else {
          let total = 0;
          cartItemsContainer.innerHTML = cart.map((item, index) => {
            total += item.price;
            return `
              <div class="flex items-center gap-3 bg-[#1a1a1a] rounded-lg p-2">
                <img src="${item.image}" alt="${item.name}" class="w-12 h-12 rounded object-cover" />
                <div class="flex-1 min-w-0">
                  <p class="text-white text-sm font-medium truncate">${item.name}</p>
                  <p class="text-gray-400 text-xs">$${item.price.toFixed(2)}</p>
                </div>
                <button class="remove-item text-gray-500 hover:text-red-500 transition-colors p-1" data-index="${index}">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            `;
          }).join('');
          cartTotal.textContent = '$' + total.toFixed(2);
          checkoutBtn.disabled = false;
          proComparison.classList.remove('hidden');

          // Add remove handlers
          document.querySelectorAll('.remove-item').forEach(btn => {
            btn.addEventListener('click', function() {
              const index = parseInt(this.dataset.index);
              const removedItem = cart[index];
              cart.splice(index, 1);
              saveCart();
              updateCartUI();
              
              // Reset the add to cart button for removed item
              const removedBtn = document.querySelector(`.add-to-cart[data-price-id="${removedItem.priceId}"]`);
              if (removedBtn) {
                removedBtn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg> Add To Cart`;
                removedBtn.classList.remove('bg-green-600');
                removedBtn.classList.add('bg-[#E94560]', 'hover:bg-[#d63d56]');
              }
            });
          });
        }
      }

      // Add to cart handler
      addToCartBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          const card = this.closest('.product-card');
          const priceId = this.dataset.priceId;
          const name = card.querySelector('h4').textContent;
          const image = card.querySelector('img').src;
          const priceText = card.querySelector('.text-white.font-bold').textContent;
          const price = parseFloat(priceText.replace('$', ''));

          // Check if already in cart
          const existingIndex = cart.findIndex(item => item.priceId === priceId);
          if (existingIndex === -1) {
            cart.push({ priceId, name, image, price });
            saveCart();
            updateCartUI();
          }
          
          // Show added state
          this.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Added`;
          this.classList.remove('bg-[#E94560]', 'hover:bg-[#d63d56]');
          this.classList.add('bg-green-600');
        });
      });

      // Toggle cart dropdown
      cartButton.addEventListener('click', function(e) {
        e.stopPropagation();
        cartDropdown.classList.toggle('hidden');
      });

      // Close cart when clicking outside
      document.addEventListener('click', function(e) {
        if (!cartDropdown.contains(e.target) && !cartButton.contains(e.target)) {
          cartDropdown.classList.add('hidden');
        }
      });

      // Checkout handler
      checkoutBtn.addEventListener('click', function() {
        if (cart.length > 0 && typeof Paddle !== 'undefined') {
          const items = cart.map(item => ({ priceId: item.priceId, quantity: 1 }));
          Paddle.Checkout.open({
            items: items,
            settings: {
              successUrl: window.location.origin + '/portal',
            }
          });
        }
      });

      // Clear cart handler
      clearCartBtn.addEventListener('click', function() {
        cart = [];
        saveCart();
        updateCartUI();
        
        // Reset all add to cart buttons
        addToCartBtns.forEach(btn => {
          btn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg> Add To Cart`;
          btn.classList.remove('bg-green-600');
          btn.classList.add('bg-[#E94560]', 'hover:bg-[#d63d56]');
        });
      });

      // Initialize cart UI
      updateCartUI();

      // Mark buttons as "Added" if already in cart
      addToCartBtns.forEach(btn => {
        const priceId = btn.dataset.priceId;
        if (cart.find(item => item.priceId === priceId)) {
          btn.innerHTML = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Added`;
          btn.classList.remove('bg-[#E94560]', 'hover:bg-[#d63d56]');
          btn.classList.add('bg-green-600');
        }
      });

      // Filter functions
      function filterProducts() {
        let visibleCount = 0;
        
        productCards.forEach(card => {
          const name = card.dataset.name;
          const category = card.dataset.category;
          const developer = card.dataset.developer;
          
          const matchesSearch = searchQuery === '' || name.includes(searchQuery.toLowerCase());
          const matchesCategory = currentCategory === 'All' || category === currentCategory;
          const matchesDeveloper = currentDeveloper === 'All' || developer === currentDeveloper;
          
          if (matchesSearch && matchesCategory && matchesDeveloper) {
            card.style.display = '';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
        
        productCount.textContent = visibleCount + ' product' + (visibleCount !== 1 ? 's' : '') + ' available';
      }

      // Search handler
      searchInput.addEventListener('input', function(e) {
        searchQuery = e.target.value;
        filterProducts();
      });

      // Category filter handler
      categoryBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          categoryBtns.forEach(b => {
            b.classList.remove('bg-[#E94560]', 'text-white', 'active');
            b.classList.add('bg-[#1a1a1a]', 'text-gray-300');
          });
          this.classList.remove('bg-[#1a1a1a]', 'text-gray-300');
          this.classList.add('bg-[#E94560]', 'text-white', 'active');
          currentCategory = this.dataset.category;
          filterProducts();
        });
      });

      // Developer filter handler
      developerBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          developerBtns.forEach(b => {
            b.classList.remove('bg-[#E94560]', 'text-white', 'active');
            b.classList.add('bg-[#1a1a1a]', 'text-gray-300');
          });
          this.classList.remove('bg-[#1a1a1a]', 'text-gray-300');
          this.classList.add('bg-[#E94560]', 'text-white', 'active');
          currentDeveloper = this.dataset.developer;
          filterProducts();
        });
      });
    });
  </script>
