---
import Layout from '../layouts/Layout.astro';
import { getMarketplaceProducts } from '../lib/paddle';

// Fetch products from Paddle API
const products = await getMarketplaceProducts();

const user = { name: "Mike Patti" };

const categories = [
  "All", "Strings", "Brass", "Percussion", "Woodwinds", "Guitars", 
  "Keyboards", "Synthesizers", "Choir", "World", "Sound Design"
];

const developers = ["Cinesamples", "Soundiron", "AudioOllie", "ProjectSAM"];
---

<Layout title="Marketplace - Musio" description="Browse and purchase virtual instruments.">
  <!-- Top Navigation -->
  <header class="border-b border-[#1a1a1a] bg-[#0a0a0a] sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <!-- Logo + Nav -->
        <div class="flex items-center gap-8">
          <a href="/">
            <img src="/logo.png" alt="Musio" class="h-8" />
          </a>
          <nav class="hidden md:flex items-center gap-6">
            <a href="/portal" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              ACCOUNT
            </a>
            <a href="/marketplace" class="text-white font-medium flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              MARKETPLACE
            </a>
            <a href="/portal#download" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
              </svg>
              DOWNLOAD
            </a>
            <a href="/portal#licenses" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
              </svg>
              ADD LICENSE
            </a>
          </nav>
        </div>
        
        <!-- User Menu -->
        <div class="flex items-center gap-4">
          <span class="text-white font-medium hidden sm:block">{user.name}</span>
          <button class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold">Marketplace</h1>
      <button class="bg-[#E94560] hover:bg-[#d63d56] text-white px-5 py-2.5 rounded-lg font-medium transition-colors flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Cart: 0 item(s)
      </button>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Sidebar -->
      <aside class="lg:w-56 flex-shrink-0">
        <!-- Categories -->
        <div class="mb-8">
          <h3 class="text-white font-semibold mb-4">Categories</h3>
          <nav class="space-y-1">
            {categories.map((cat, i) => (
              <button class={`w-full text-left px-4 py-2.5 rounded-lg text-sm font-medium transition-colors ${i === 2 ? 'bg-[#E94560] text-white' : 'bg-[#1a1a1a] text-gray-300 hover:bg-[#2a2a2a]'}`}>
                {cat}
              </button>
            ))}
          </nav>
        </div>
        
        <!-- Developers -->
        <div>
          <h3 class="text-white font-semibold mb-4">Developer</h3>
          <nav class="space-y-1">
            {developers.map((dev) => (
              <button class="w-full text-left px-4 py-2.5 rounded-lg text-sm font-medium transition-colors bg-[#1a1a1a] text-gray-300 hover:bg-[#2a2a2a]">
                {dev}
              </button>
            ))}
          </nav>
        </div>
      </aside>

      <!-- Products Grid -->
      <main class="flex-1">
        <!-- Search -->
        <div class="mb-6">
          <div class="relative">
            <input 
              type="text" 
              placeholder="Search"
              class="w-full px-4 py-3 bg-[#141414] border border-[#2a2a2a] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-[#E94560] transition-colors pr-12"
            />
            <svg class="w-5 h-5 text-gray-500 absolute right-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {products.map((product) => (
            <div class="bg-[#141414] rounded-xl border border-[#1a1a1a] overflow-hidden hover:border-[#2a2a2a] transition-colors group" data-product-id={product.id} data-price-id={product.priceId}>
              <div class="aspect-square overflow-hidden">
                <img 
                  src={product.image} 
                  alt={product.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
              <div class="p-4">
                <h4 class="text-white font-semibold mb-1 truncate" title={product.name}>{product.name}</h4>
                <p class="text-gray-400 text-sm mb-3 truncate">{product.description || 'Virtual Instrument'}</p>
                <div class="flex items-center justify-between">
                  <span class="text-white font-bold">${product.price.toFixed(2)}</span>
                  <button 
                    class="add-to-cart bg-[#E94560] hover:bg-[#d63d56] text-white text-sm px-3 py-1.5 rounded-lg font-medium transition-colors flex items-center gap-1.5"
                    data-price-id={product.priceId}
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Add To Cart
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Product count -->
        <p class="text-gray-500 text-sm mt-6">{products.length} products available</p>
      </main>
    </div>
  </div>

  <!-- Support Button -->
  <div class="fixed bottom-6 left-6">
    <button class="bg-[#E94560] hover:bg-[#d63d56] text-white px-5 py-3 rounded-full font-medium transition-colors flex items-center gap-2 shadow-lg">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Support
    </button>
  </div>
</Layout>
