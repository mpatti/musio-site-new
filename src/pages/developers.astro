---

<Layout title="For Developers - Musio" description="A stable home for your sounds. You make sounds. We do everything else.">
  <!-- Header -->
  <header class="absolute top-0 left-0 right-0 z-20 py-6 px-6">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <a href="/" class="text-gray-400 hover:text-white text-sm transition-colors flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Musio
      </a>
    </div>
  </header>

  <!-- Hero Section with Background -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden px-6">
    <!-- Subtle Image Grid Background -->
    <div class="absolute inset-0 grid-background">
      <div class="image-grid">
        {instrumentImages.map((src, i) => (
          <div class="grid-item">
            <img 
              src={src} 
              alt="" 
              loading={i < 12 ? "eager" : "lazy"}
              decoding="async"
              width="100"
              height="100"
              class="w-full h-full object-cover"
            />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/70 to-[#0a0a0a]/40"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a0a]/70 via-transparent to-transparent"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto text-center">
      <!-- Logo -->
      <div class="mb-12">
        <img 
          src="https://musio-discover-oqhe.vercel.app/musio-logo.png" 
          alt="Musio" 
          class="h-12 md:h-16 mx-auto"
        />
      </div>
      
      <!-- Headline -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
        A stable home for your sounds.
      </h1>
      
      <!-- Sub-headline -->
      <p class="text-xl md:text-2xl text-gray-300 mb-6 max-w-2xl mx-auto">
        You make sounds. We do everything else.
      </p>
      
      <!-- Trust line -->
      <p class="text-gray-500 mb-12">
        No platform dependencies. No licensing middlemen. Your future, secured.
      </p>
      
      <!-- CTA -->
      <a 
        href="mailto:developers@musio.com?subject=Migration%20Inquiry" 
        class="inline-block bg-[#E94560] hover:bg-[#d63d56] text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-200 hover:scale-105"
      >
        Start your migration
      </a>
    </div>
  </section>

  <!-- Trusted By Section -->
  <section class="py-16 px-6 border-b border-[#1a1a1a]">
    <div class="max-w-4xl mx-auto text-center">
      <p class="text-sm text-gray-500 uppercase tracking-widest mb-8">Already on Musio</p>
      <div class="flex flex-wrap justify-center items-center gap-x-12 gap-y-4">
        {partnerDevelopers.map((name) => (
          <span class="text-gray-300 text-xl font-medium">{name}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- What You Keep Section -->
  <section class="py-24 px-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Still yours.</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-[#1a1a1a] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-[#E94560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Your IP</h3>
          <p class="text-gray-400">Your samples, your recordings, your creative work. Always yours.</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-[#1a1a1a] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-[#E94560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Your royalties</h3>
          <p class="text-gray-400">You get paid. We handle the billing, support, and everything else.</p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-[#1a1a1a] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-[#E94560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Your brand</h3>
          <p class="text-gray-400">Your name front and center. We manage customers so you can focus on creating.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Instrument Showcase -->
  <section class="py-20 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl font-semibold text-center mb-4 text-gray-300">Your instruments, beautifully presented.</h2>
      <p class="text-gray-500 text-center mb-12">Professional UI. Consistent experience. Zero development required.</p>
      <div class="grid md:grid-cols-3 gap-6">
        <img 
          src="/dev-screenshot-horns.png" 
          alt="6 Horn Ensemble instrument on Musio" 
          class="w-full rounded-lg shadow-xl border border-[#1a1a1a]"
          loading="lazy"
        />
        <img 
          src="/dev-screenshot-vowels.png" 
          alt="Vowels choir instrument on Musio" 
          class="w-full rounded-lg shadow-xl border border-[#1a1a1a]"
          loading="lazy"
        />
        <img 
          src="/dev-screenshot-taikos.png" 
          alt="Taikos percussion instrument on Musio" 
          class="w-full rounded-lg shadow-xl border border-[#1a1a1a]"
          loading="lazy"
        />
      </div>
    </div>
  </section>

  <!-- Problem vs Solution Section -->
  <section class="py-24 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">A better way forward.</h2>
      <div class="grid md:grid-cols-2 gap-8">
        
        <!-- The Old Way -->
        <div class="bg-[#0a0a0a] rounded-2xl p-8 border border-[#1a1a1a]">
          <div class="flex items-center gap-3 mb-8">
            <span class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </span>
            <h3 class="text-2xl font-bold text-gray-400">The old way</h3>
          </div>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="text-gray-600 mt-0.5">×</span>
              <span class="text-gray-500">Build your own plugin, store, and support.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-600 mt-0.5">×</span>
              <span class="text-gray-500">Pay upfront for serial codes and licensing.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-600 mt-0.5">×</span>
              <span class="text-gray-500">Time spent on infrastructure, not instruments.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-600 mt-0.5">×</span>
              <span class="text-gray-500">Piracy eating into your revenue.</span>
            </li>
          </ul>
        </div>
        
        <!-- With Musio -->
        <div class="bg-gradient-to-br from-[#E94560]/10 to-[#0a0a0a] rounded-2xl p-8 border border-[#E94560]/30">
          <div class="flex items-center gap-3 mb-8">
            <span class="w-10 h-10 rounded-full bg-[#E94560]/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-[#E94560]" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </span>
            <h3 class="text-2xl font-bold text-white">With Musio</h3>
          </div>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="text-[#E94560] mt-0.5">✓</span>
              <span class="text-gray-200">We handle store, licensing, delivery, support.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-[#E94560] mt-0.5">✓</span>
              <span class="text-gray-200">No upfront costs. No serial code hassles.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-[#E94560] mt-0.5">✓</span>
              <span class="text-gray-200">Just make great instruments. We do the rest.</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-[#E94560] mt-0.5">✓</span>
              <span class="text-gray-200">Built-in piracy protection.</span>
            </li>
          </ul>
        </div>
        
      </div>
    </div>
  </section>

  <!-- White Glove Section -->
  <section class="py-24 px-6">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        We'll do the work for you.
      </h2>
      <p class="text-xl text-gray-300 mb-12 leading-relaxed">
        Moving your catalog should be easy. We'll port your existing libraries to Musio—no cost, no hassle. Just send us the files.
      </p>
      <a 
        href="mailto:developers@musio.com" 
        class="inline-block bg-[#E94560] hover:bg-[#d63d56] text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all duration-200 hover:scale-105"
      >
        Message us
      </a>
      <p class="text-gray-500 text-sm mt-4">developers@musio.com</p>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-[#1a1a1a] py-12 px-6">
    <div class="max-w-5xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <!-- Logo -->
        <a href="/">
          <img 
            src="https://musio-discover-oqhe.vercel.app/musio-logo.png" 
            alt="Musio" 
            class="h-8"
          />
        </a>
        
        <!-- Links -->
        <nav class="flex gap-8 text-gray-400">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <a href="https://support.musio.com" class="hover:text-white transition-colors">Support</a>
          <a href="https://musio.com/privacy" class="hover:text-white transition-colors">Privacy</a>
        </nav>
        
        <!-- Status -->
        <div class="flex items-center gap-2 text-sm text-gray-500">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span>Musio Platform: Online & Independent</span>
        </div>
      </div>
      
      <!-- Copyright -->
      <p class="text-center text-gray-500 text-sm mt-8">
        &copy; {new Date().getFullYear()} Musio. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>

<style>
  .grid-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  
  .image-grid {
    display: grid;
    grid-template-columns: repeat(7, 120px);
    grid-auto-rows: 120px;
    gap: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(4);
    opacity: 0.7;
  }
  
  .grid-item {
    overflow: hidden;
    filter: blur(1.5px) brightness(1.1);
    width: 100%;
    height: 100%;
    background: #1a1a1a;
  }
  
  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
